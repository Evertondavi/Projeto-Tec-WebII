		   while($ln = mysqli_fetch_array($seleciona)){
		   $titulo   = $ln['titulo'];
		   $imagem   = $ln['foto'];
		   $conteudo = $ln['texto'];
		   
		
	 ?>
        <article id="post">
            <h1 ><?php echo $titulo;?></h1>
            <img src="img/<?php echo $imagem; ?>" />
            <p><?php echo $conteudo;?></p>
           
